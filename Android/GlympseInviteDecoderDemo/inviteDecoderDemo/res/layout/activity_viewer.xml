<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewerActivity" 
    android:orientation="vertical" 
    android:padding="20dp" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invite_uri" />
        <EditText 
            android:id="@+id/edit_invite_uri"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri" />        
        <Button
            android:id="@+id/button_analyze"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_analyze" 
            android:onClick="analyze"
            android:layout_marginTop="5dp" />
    </LinearLayout>    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp" >
        <Button
            android:id="@+id/button_regular_request"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_expire_all" 
            android:onClick="expireAll" />
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expire_explanation"
            android:layout_marginTop="5dp" />
    </LinearLayout>        
    
</LinearLayout>